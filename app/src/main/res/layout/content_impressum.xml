<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ImpressumActivity"
    tools:showIn="@layout/activity_impressum">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/headerImpText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/impressum"
            android:textSize="15sp"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/headerTUText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/headerAddresseTUBerlin"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/anschriftTUText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textAddresseTUBerlin"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/mailTUText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="@string/e_mail_anfrage"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/websiteTUText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:text="@string/www_tu_berlin_de"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/hinweisTUText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textSupplementAddresseTUBerlin"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/headerSenatText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rechtsaufsicht"
            android:textSize="12sp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/senatText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/der_regierende_b_rgermeister_von_berlin_senatskanzlei"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/websiteSenatText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:text="@string/https_www_berlin_de_rbmskzl"
            android:textSize="10sp" />


        <TextView
            android:id="@+id/headerUmsatzText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/umsatzsteueridentifikationsnummer"
            android:textSize="12sp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/UmsatzText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ust_id_nr_de_811_231_089"
            android:textSize="10sp" />


        <TextView
            android:id="@+id/headerAnsprechPartnerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ansprechpartner"
            android:textSize="12sp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/ansprechPartnerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:text="@string/textCallCenterTUBerlin"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/headerHerausgeberText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/herausgeber"
            android:textSize="12sp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/herausgeberText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="email"
            android:text="@string/prof_dr_ing_david_bermbach_einsteinufer_17_sekr_en17_10587_berlin_telefon_49_0_30_314_0_e_mail_simra_mcc_gmail_com"
            android:textSize="10sp" />


        <TextView
            android:id="@+id/headerDisclaimerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/headerDisclaimer"
            android:textSize="12sp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/disclaimerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textDisclaimer"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/headerLinksText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/verweise_und_links"
            android:textSize="12sp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/linksText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textLinks"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/headerTUCopyRightText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/urheber_und_kennzeichenrecht"
            android:textSize="12sp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/tUCopyRightText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textTUCopyRight"
            android:textSize="10sp" />


        <TextView
            android:id="@+id/headerPrivacyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/headerPrivacy"
            android:textSize="12sp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/privacyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textPrivacy"
            android:textSize="10sp" />


        <TextView
            android:id="@+id/headerfurtherText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/weitere_informationen_zum_thema_datenschutz_an_der_tu_berlin"
            android:textSize="12sp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/headerDSBText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/datenschutzerkl_rung_datenschutzbeauftragte_der_tu_berlin"
            android:textSize="12sp"
            android:layout_marginStart="10dp"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>
</ScrollView>