<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Impressum2Activity"
    tools:showIn="@layout/activity_impressum2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/headerImp2Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@string/headerDataPrivacy"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/headerRightOfAccesText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:autoLink="email"
            android:text="@string/headerRightOfAcces"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/rightOfAccesText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="phone|email"
            android:text="@string/textRightOfAcces"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/headerSubjectOfDataPrivacyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/headerSubjectOfDataPrivacy"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/subjectOfDataPrivacyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="@string/textSubjectOfDataPrivacy"
            android:textSize="10sp" />


        <TextView
            android:id="@+id/headerGeneralDataPrivacyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/headerGeneralDataPrivacy"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/generalDataPrivacyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textGeneralDataPrivacy"
            android:textSize="10sp" />


        <TextView
            android:id="@+id/headerExtentOfDataCollectionAndStorageText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/headerExtentOfDataCollectionAndStorage"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/extentOfDataCollectionAndStorageText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textExtentOfDataCollectionAndStorage"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/headerOsmCopyrightText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/openstreetmap"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/osmCopyrightText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/osmCopyrightText"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/border"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:text=" "
            android:textSize="12sp" />
    </LinearLayout>
</ScrollView>