<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreditsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_corners"
        android:elevation="8dp"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:titleTextColor="#FEFEFE"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:titleTextAppearance="@style/Toolbar.TitleText" >


        <ImageButton
            android:id="@+id/helmet_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:background="@drawable/helmet" />


    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">


        <ImageView
            android:id="@+id/helmetCredit_icon"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/helmet" />

        <TextView
            android:id="@+id/helmetCreditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/helmetCredit_icon"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_toEndOf="@+id/helmetCredit_icon"
            android:autoLink="web"
            android:scrollHorizontally="false"
            android:text="@string/freepikCredit" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">


        <ImageView
            android:id="@+id/route_icon"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:background="@drawable/route" />

        <TextView
            android:id="@+id/routeCreditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/route_icon"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_toEndOf="@+id/route_icon"
            android:autoLink="web"
            android:scrollHorizontally="false"
            android:text="@string/freepikCredit" />


    </RelativeLayout>


