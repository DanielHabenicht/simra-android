    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">


        <ImageView
            android:id="@+id/directionArrow_image"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:autoLink="web"
            android:background="@drawable/direction_arrow" />

        <TextView
            android:id="@+id/directionArrowText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/directionArrow_image"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_toEndOf="@+id/directionArrow_image"
            android:autoLink="web"
            android:scrollHorizontally="false"
            android:text="@string/freepikCredit" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">


        <ImageView
            android:id="@+id/stop_image"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/stop" />

        <TextView
            android:id="@+id/stopCreditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/stop_image"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_toEndOf="@+id/stop_image"
            android:autoLink="web"
            android:scrollHorizontally="false"
            android:text="@string/smashiconCredit" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">


        <ImageView
            android:id="@+id/locationMarker_image"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/edit_event_black" />

        <TextView
            android:id="@+id/locationMarkerCreditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/locationMarker_image"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_toEndOf="@+id/locationMarker_image"
            android:autoLink="web"
            android:scrollHorizontally="false"
            android:text="@string/smashiconCredit" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">


        <ImageView
            android:id="@+id/tab_image"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/tap" />

        <TextView
            android:id="@+id/tabCreditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/tab_image"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_toEndOf="@+id/tab_image"
            android:autoLink="web"
            android:scrollHorizontally="false"
            android:text="@string/pixelCredit" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">


        <ImageView
            android:id="@+id/center_image"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/center" />

        <TextView
            android:id="@+id/centerCreditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/center_image"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_toEndOf="@+id/center_image"
            android:autoLink="web"
            android:scrollHorizontally="false"
            android:text="@string/icons8Credit" />


    </RelativeLayout>


</LinearLayout>