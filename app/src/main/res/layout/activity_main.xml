<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6b99ad"
    tools:context=".MainActivity">

    <org.osmdroid.views.MapView android:id="@+id/map"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <RelativeLayout android:id="@+id/upper_bar"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_margin="4dp"
        android:elevation="8dp"

        android:background="@drawable/rounded_corners">

        <TextView android:id="@+id/welcome_text"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:fontFamily="@font/assistant_extralight"
            android:text="Welcome to SimRa!"
            android:textColor="#FEFEFE"
            android:textSize="22dp"
            android:textStyle="bold"
            />

        <ImageButton android:id="@+id/burger_menu"
            android:layout_width="40dp"
            android:layout_height="55dp"
            android:background="@drawable/menu"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            />

        <ImageButton android:id="@+id/helmet_icon"
            android:layout_width="70dp"
            android:layout_height="75dp"
            android:background="@drawable/helmet"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            />

    </RelativeLayout>

        <TextView android:id="@+id/Latitude"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"

            android:gravity="center"

            android:background="@drawable/rounded_corners"

            android:fontFamily="@font/assistant_extralight"
            android:textSize="15dp"
            android:textColor="#FEFEFE"
            android:textStyle="bold"
            />

        <TextView android:id="@+id/Longitude"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"

            android:gravity="center"

            android:background="@drawable/rounded_corners"

            android:fontFamily="@font/assistant_extralight"
            android:textSize="15dp"
            android:textColor="#FEFEFE"
            />

</RelativeLayout>