<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/rounded_corners"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IncidentPopUp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="280dp">

        <TextView
            android:id="@+id/eingabeaufforderung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="37dp"
            android:layout_marginBottom="450dp"
            android:fontFamily="@font/assistant_extralight"
            android:text="Was genau ist vorgefallen?"
            android:layout_centerHorizontal="true"
            android:textColor="#FEFEFE"
            android:textSize="24dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ziel_eingabe"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/rounded_white"
            android:gravity="center"
            android:inputType="textMultiLine" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/weiter_button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="49dp"
        android:layout_marginRight="49dp"
        android:layout_marginBottom="74dp"
        android:background="@drawable/rounded_sub">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="58dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/route_arrow"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/assistant_extralight"
            android:gravity="center_vertical"
            android:text="Absenden"
            android:textColor="#041035"
            android:textSize="22dp"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>