<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:background="@drawable/button_unpressed"
        android:elevation="8dp"
        android:theme="@style/ToolbarTheme"
        android:titleTextColor="#FEFEFE"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:titleTextAppearance="@style/Toolbar.TitleText">


        <ImageButton
            android:id="@+id/helmet_icon"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            android:background="@drawable/helmet" />


    </androidx.appcompat.widget.Toolbar>


    <include layout="@layout/content_main" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_ride_settings_general"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/toolbar"
        android:layout_alignBottom="@id/button_start"
        android:gravity="center_vertical"
        android:src="@drawable/ic_settings_black_24dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_ride_settings_radmesser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/toolbar"
        android:layout_alignBottom="@id/button_start"
        android:gravity="center_vertical"
        android:src="@drawable/ic_bluetooth_disabled"
        android:visibility="gone" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/button_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/copyright_text"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_marginEnd="63dp"
        android:gravity="center"
        android:icon="@drawable/ic_route"
        android:maxLines="2"
        android:text="@string/startButtonText"
        app:icon="@drawable/route" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/button_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/copyright_text"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_marginEnd="63dp"
        android:gravity="center"
        android:icon="@drawable/ic_route"
        android:maxLines="2"
        android:text="@string/stopButtonText"
        app:icon="@drawable/stop" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/report_closepass_incident"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:layout_weight="1"
            android:gravity="left"
            android:maxLines="1"
            android:text="@string/reportIncidentClosepass"
            android:textAlignment="center"
            android:visibility="visible"
            app:icon="@android:drawable/stat_sys_warning" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/report_obstacle_incident"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:layout_weight="1"
            android:gravity="right"
            android:maxLines="1"
            android:text="@string/reportIncidentObstacle"
            android:textAlignment="center"
            android:visibility="visible"
            app:icon="@android:drawable/stat_sys_warning" />
    </LinearLayout>

    <TextView
        android:id="@+id/copyright_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="5dp"
        android:text="@string/osmCopyright"
        android:textSize="10sp" />

</RelativeLayout>